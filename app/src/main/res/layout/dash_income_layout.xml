<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardElevation="10dp"
    android:elevation="5dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:padding="5dp"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:text="Type"
            android:padding="7dp"
            android:textStyle="bold"
            android:id="@+id/dash_income_card_type"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:gravity="center"
            android:textColor="@color/inc_type"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:text="Amount"
            android:padding="7dp"
            android:textColor="#156b1f"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:id="@+id/dash_income_card_amount"
            android:gravity="center"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:text="10 July 2019"
            android:padding="7dp"
            android:textColor="@color/inc_date"
            android:gravity="center"
            android:id="@+id/dash_income_card_date"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:layout_height="wrap_content" />

    </LinearLayout>

</android.support.v7.widget.CardView>